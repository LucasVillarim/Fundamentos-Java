package fundamentos;

import java.util.Collection;
import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;
import java.util.Map.Entry;
import java.util.Set;

import fundamentos.model.Mobile;

public class Sistema {

  	public static void main(String[] args) {
  		// Cria um map.
  		Map<String, String> frutas = new HashMap<String, String>();
  		frutas.put("0", "maçã");
  		frutas.put("1", "banana");
  		frutas.put("2", "melância");
  		frutas.put("3", "maracujá");
  		frutas.put("4", "banana");
  		
  		//Mostra os diferentes métodos existentes na classe HashMap.
  		System.out.println("Método .keySet() => " + frutas.keySet());
  		System.out.println("Método .values() => " + frutas.values());
  		System.out.println("Método .entrySet() => " + frutas.entrySet());
  		  		
  		//Cria um Iterator para percorrer os dados do map frutas.
  		Iterator it = frutas.entrySet().iterator();
  		
  		//Itera sobre o map frutas e mostra em tela as chaves e valores.
  		while(it.hasNext()){
  	      Entry entry = (Entry)it.next();
  	      System.out.println(entry.getKey() + " "+entry.getValue());
  	    }
	}
}
